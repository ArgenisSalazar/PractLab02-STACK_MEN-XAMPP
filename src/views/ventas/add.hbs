<div class="container p-4" style="margin-top: 70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Agregar Venta</h3>
                </div>
                <div class="card-body">
                    <form action="/addvent" method="post">
                        <div class="input-group mt-2">
                            <label for="idcli" class="input-group-text">Cliente</label>
                            <select class="form-select" name="idcli" id="idcli" required>
                                <option value="">Seleccione un cliente</option>
                                {{#each clientes}}
                                <option value="{{this.idcli}}">{{this.nomcli}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-group mt-2">
                            <label for="idprod" class="input-group-text">Producto</label>
                            <select class="form-select" name="idprod" id="idprod" required>
                                <option value="">Seleccione un producto</option>
                                {{#each productos}}
                                <option value="{{this.idprod}}">{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="cantidad" id="cantidad"
                                placeholder="Cantidad" min="1" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="fecha" class="input-group-text">Fecha Venta</label>
                            <input class="form-control" type="datetime-local" name="fecha" id="fecha" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" type="submit">Guardar</button>
                            <a href="/listvent" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>