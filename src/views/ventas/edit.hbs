<div class="container p-4" style="margin-top: 70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editar Venta</h3>
                </div>
                <div class="card-body">
                    <form action="/editvent/{{venta.idventa}}" method="post">
                        <div class="input-group mt-2">
                            <label for="idcli" class="input-group-text">ID Cliente</label>
                            <input class="form-control" type="number" name="idcli" id="idcli" placeholder="ID Cliente"
                                value="{{venta.idcli}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="idprod" class="input-group-text">ID Producto</label>
                            <input class="form-control" type="number" name="idprod" id="idprod"
                                placeholder="ID Producto" value="{{venta.idprod}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="cantidad" id="cantidad"
                                placeholder="Cantidad" value="{{venta.cantidad}}" min="1" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="fecha" class="input-group-text">Fecha Venta</label>
                            <input class="form-control" type="datetime-local" name="fecha" id="fecha"
                                value="{{venta.fecha_venta}}" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" type="submit">Actualizar</button>
                            <a href="/listvent" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>