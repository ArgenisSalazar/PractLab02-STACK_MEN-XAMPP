<div class="container" style="margin-top: 70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Ventas</h3>

        <div style="padding: 10px;">
            <a href="/addvent" class="btn btn-danger">Nueva Venta</a>
        </div>

        {{#if ventas.length}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col">ID Venta</th>
                    <th scope="col">ID Cliente</th>
                    <th scope="col">ID Producto</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Fecha de Venta</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each ventas}}
                <tr>
                    <td>{{this.idventa}}</td>
                    <td>{{this.nombre_cliente}}</td>
                    <td>{{this.nombre_producto}}</td>
                    <td>{{this.cantidad}}</td>
                    <td>{{this.fecha_venta}}</td>
                    <td>
                        <div class="">
                            <a href="/editvent/{{this.idventa}}" class="btn btn-warning p-2">Editar</a>
                            <a href="/deletevent/{{this.idventa}}" class="btn btn-danger p-2">Eliminar</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="6">REGISTRO DE VENTAS</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay ventas registradas</h3>
            </div>
            <div class="card-body">
                <p>No se han registrado ventas a√∫n.</p>
            </div>
        </div>
        {{/if}}
    </div>
</div>