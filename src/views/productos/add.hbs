<div class="container p-4" style="margin-top: 70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Agregar Producto</h3>
                </div>
                <div class="card-body">
                    <form action="/addprod" method="post">
                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="precio" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" name="precio" id="precio" placeholder="Precio" step="0.01" min="0" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="cantidad" id="cantidad" placeholder="Cantidad" min="0" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" type="submit">Guardar</button>
                            <a href="/listprod" class="btn btn-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>