<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR CLIENTE</h3>
                </div>
                <div class="card-body">
                    <form action="/editcli/{{cliente.idcli}}" method="post">
                        <div class="input-group mt-2">
                            <label for="nomcli" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Nombres"
                                value="{{cliente.nomcli}}" autofocus required maxlength="50">
                        </div>
                        <div class="input-group mt-2">
                            <label for="apecli" class="input-group-text">Apellidos</label>
                            <input class="form-control" type="text" name="apecli" id="apecli" placeholder="Apellidos"
                                value="{{cliente.apecli}}" required maxlength="50">
                        </div>
                        <div class="input-group mt-2">
                            <label for="nrodnicli" class="input-group-text">Nro. DNI</label>
                            <input class="form-control" type="text" name="nrodnicli" id="nrodnicli"
                                value="{{cliente.nrodnicli}}" placeholder="Nro. DNI" required maxlength="8"
                                pattern="[0-9]+">
                        </div>
                        <div class="input-group mt-2">
                            <label for="telcli" class="input-group-text">Nro. Teléfono</label>
                            <input class="form-control" type="text" name="telcli" id="telcli"
                                placeholder="Nro. Teléfono" value="{{cliente.telcli}}" required maxlength="9"
                                pattern="[0-9]+">
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page"
                                    href="/listcli"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>